<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#20000000"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <Button
            android:id="@+id/bt_photo"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:background="@drawable/sdk_btn_zxing_photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_photo"
            android:layout_centerHorizontal="true"
            android:text="相册"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/bt_flash"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:background="@drawable/sdk_btn_zxing_flash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_flash"
            android:layout_centerHorizontal="true"
            android:text="开灯"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/bt_createqr"
            android:layout_width="65dp"
            android:layout_height="67dp"
            android:background="@drawable/sdk_btn_zxing_qrcode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_createqr"
            android:layout_centerHorizontal="true"
            android:text="二维码"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>